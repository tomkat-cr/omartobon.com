# php -- BEGIN cPanel-generated handler, do not edit
# Set the “ea-php81” package as the default “PHP” programming language.
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php82 .php .php8 .phtml
</IfModule>
# php -- END cPanel-generated handler, do not edit

####################

# Set envvars

####################

# Google reCAPTCHA Keys
SetEnv RECAPTCHA_SITE_KEY "your_site_key_here"
SetEnv RECAPTCHA_SECRET_KEY "your_secret_key_here"

# Google Tag ID
SetEnv GOOGLE_TAG_ID "your_google_tag_id"

####################

# Allowed referrers
SetEnv ALLOWED_REFERRERS "http://localhost:8080"

####################

# Emailing settings
SetEnv TARGET_EMAIL "your-email@your-domain.com"
SetEnv TARGET_NAME "Your Name"

SetEnv MAIL_PROVIDER "smtp"
# SetEnv MAIL_PROVIDER "sendgrid"
# SetEnv MAIL_PROVIDER "mail"
# SetEnv MAIL_PROVIDER "pear"

# SMTP mail
SetEnv SMTP_HOST "smtp.your-domain.com"
SetEnv SMTP_PORT "587"
SetEnv SMTP_USERNAME "your-email@your-domain.com"
SetEnv SMTP_PASSWORD "your-password"

# SendGrid mail
# SetEnv SENDGRID_API_KEY "your-sendgrid-api-key"
# SetEnv SENDGRID_FROM "sendgrid-registered-email@your-domain.com"

# Pear mail
# SetEnv HOSTING_USER_PEAR_PATH "/home/your-hosting-username/php"
# SetEnv ALLOWED_PATHS "/home/your-hosting-username/php"

####################

# CORS configuration

<IfModule mod_headers.c>
  # Header set Access-Control-Allow-Origin "http://localhost:8080"
  Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
  Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization"
  Header always set Access-Control-Allow-Credentials "true"
  # Handle preflight requests
  <If "%{REQUEST_METHOD} == 'OPTIONS'">
    Header always set Access-Control-Max-Age "86400"
    Header always set Content-Length "0"
    Header always set Content-Type "text/plain charset=UTF-8"
    Require all granted
  </If>
</IfModule>
